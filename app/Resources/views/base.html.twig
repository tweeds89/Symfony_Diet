{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js" integrity="sha256-0YPKAwZP7Mp3ALMRVB2i8GXeEndvCq3eSl/WsAl1Ryk=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
    <script src="{{ asset('/js/confirmationDialog.js') }}"></script>
    <script src="{{ asset('/js/alertDialog.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });

            $('body').on('click', '.delete-button', function (e) {
                e.preventDefault();
                const $link = $(this).attr('href');
                confirmationDialog(
                    'Usuwanie pozycji',
                    'Czy jesteś pewny, ze chcesz usunać tą pozycję?',
                    'Usuń',
                    'Nie usuwaj',
                    function () {
                        $.ajax({
                            url: $link,
                            type: 'DELETE',
                            contentType: 'application/json'
                        }).done(function () {
                            alertDialog(
                                'Usuwanie pozycji',
                                'Pozycja została pomyślnie usunięta'
                            );
                        }).fail(function () {
                            alertDialog(
                                'Usuwanie pozycji',
                                'Usuwanie pozycji się nie powiodło'
                            );
                        });
                    }
                );
            })
        });
    </script>
{% endblock %}

