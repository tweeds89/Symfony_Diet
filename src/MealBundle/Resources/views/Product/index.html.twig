{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-primary" href="{{ path("product_add") }}" role="button">Dodaj Produkt</a>
    {% if products is not empty %}
        <table class="table table-striped" id="table-product">
            <thead>
            <tr>
                <th>ID</th>
                <th>Produkt</th>
                <th>Kalorie/100g</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.calories }} kcal</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path("product_edit", {'product': product.id}) }}" role="button">Edytuj</a>
                        <a class="btn btn-danger delete-button" href="{{ path("product_delete", {'product': product.id}) }}" role="button">Usu≈Ñ</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {% include "/templates/confirmation-dialog-template.html.twig" %}
    {% include "/templates/alert-dialog-template.html.twig" %}
{% endblock %}
